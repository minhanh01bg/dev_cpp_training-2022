#include <bits/stdc++.h>
using namespace std;
long long LIMIT = INT_MIN;
long long BITS[100005];
int main()
{
	memset(BITS,0,sizeof(BITS));
	long long a;
	cin>>a;
	long long C[a];
	long long total = 0;
	for (int i=0; i<a; i++) 
	{
		cin>>C[i];
		LIMIT = max(LIMIT, C[i]);
	}
	long long right = a;
	for (int i = a-1; i>=0; i--)
	{
		if (C[i]%2)
		{
			for (int j = i+1; j < right; j++)
			{
				long long x = C[j];
				while (x <= LIMIT)
				{
					BITS[x]++;
					x += x & -x;
				}
			}
			right = i;
		}
		else 
		{
			long long x = C[i] - 1;
			while (x)
			{
				total += BITS[x];
				x -= x & -x;
			}
		}
	}
	cout<<total;
}
